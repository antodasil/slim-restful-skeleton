{
    "name": "adasilva/slim-restful-skeleton",
    "description": "Skeleton for slim app with slim-restful",
    "license": "MIT",
    "repositories": [
        {
            "type": "path",
            "url": "../slim-restful"
        }
    ],
    "require": {
        "adasilva/slim-restful": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Controllers\\": "src/controllers",
            "Routes\\": ["src/routes", "src/routes/middlewares"]
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}